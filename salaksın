<body>

    <div id="mainButton">Emel Bana Tıkla</div>

    <div id="secondButton">Tekrar bana tıkla emel</div>

    <div id="brokenHeartContainer">
        <svg class="broken-heart-svg" viewBox="0 0 512 512" xmlns="http://www.w3.org/2000/svg">
            <path d="M462.3 62.6C407.5 15.9 326 24.3 275.7 76.2L256 96.5l-19.7-20.3C186.1 24.3 104.5 15.9 49.7 62.6c-62.8 53.6-66.1 149.8-9.9 207.9l193.5 199.8c12.5 12.9 32.8 12.9 45.3 0l193.5-199.8c56.3-58.1 53-154.3-9.8-207.9zM229.3 256l-80-80-37.3 37.3c-14.9 14.9-40.2 4.3-40.2-16.8v-74.7c0-10.7 12.8-16 20.3-8.6l46.8 46.8 48.8-48.8 41.6 41.6zM380 229.3c0 10.7-12.8 16-20.3 8.6l-46.8-46.8-48.8 48.8-41.6-41.6 80 80 37.3-37.3c14.9-14.9 40.2-4.3 40.2 16.8v74.7z"/>
        </svg>
        <div class="broken-heart-text">Kalbimi kırdın</div>
    </div>


    <script>
        const mainButton = document.getElementById('mainButton');
        const secondButton = document.getElementById('secondButton');
        const brokenHeartContainer = document.getElementById('brokenHeartContainer');
        const body = document.body;
        let heartInterval;

        // --- 1. AŞAMA: İlk Tıklama ---
        mainButton.addEventListener('click', function() {
            // İlk butonu gizle
            mainButton.style.display = 'none';

            // Kalp yağmurunu başlat
            startHeartRain();

            // 4 saniye sonra kalp üretimini durdur
            setTimeout(() => {
                clearInterval(heartInterval);
            }, 4000);

            // Yaklaşık 11 saniye sonra (kalpler ekrandan gidince) ikinci butonu göster
            setTimeout(() => {
                secondButton.style.display = 'flex';
            }, 11000);
        });


        // --- 2. AŞAMA: İkinci Tıklama ---
        secondButton.addEventListener('click', function() {
            // İkinci butonu gizle
            secondButton.style.display = 'none';
            
            // Kırık kalbi göster
            brokenHeartContainer.style.display = 'flex';
        });


        // --- YARDIMCI FONKSİYONLAR ---
        function startHeartRain() {
            // İlk etapta hemen bir miktar üret
            for(let i=0; i<20; i++) createHeart();
            // Sonra sürekli üret (biraz daha hızlı - 200ms)
            heartInterval = setInterval(createHeart, 200);
        }

        function createHeart() {
            const heart = document.createElement('div');
            heart.classList.add('heart');

            const textSpan = document.createElement('span');
            textSpan.classList.add('heart-text');
            textSpan.innerText = Math.random() > 0.5 ? "Seni" : "Seviyorum";
            heart.appendChild(textSpan);

            const startX = Math.random() * 100;
            const startY = Math.random() * 100;
            
            heart.style.left = startX + 'vw';
            heart.style.top = startY + 'vh';

            const moveX = (Math.random() - 0.5) * 300;
            const moveY = (Math.random() - 0.5) * 300;
            
            heart.style.setProperty('--tx', moveX + 'px');
            heart.style.setProperty('--ty', moveY + 'px');

            // Ağır çekim süresi (5-10 sn arası)
            const duration = 5 + Math.random() * 5; 
            heart.style.animationDuration = duration + 's';

            body.appendChild(heart);

            setTimeout(() => {
                heart.remove();
            }, duration * 1000);
        }
    </script>
</body>
</html>
